					rgba: .5, .5, .5, 1
				Line:
					width: 2
					rectangle: self.x, self.y, self.width, self.height
			text: "ADESIONI"
			size_hint_y: 0.1
			font_size: "20"
			font_name: "Radley-Sans"
			on_release: 
				app.root.current = "first"
				root.manager.transition.direction = "left"
				root.adesioni()
			on_press:
				root.per_adesioni()


		GridLayout:
			cols: 2
			spacing: 5
			padding: 5
			size_hint_y: 0.70  

			Label:
				text: ""

			Label:
				text: ""

			Label:
				text: "Adesioni fatte:"
				font_name: "Radley-Sans"
				font_size: "20"

			Label:
				id: numero_adesioni
				text: "0"

			Label:
				text: ""

			Label:
				text: ""

			Label:
				text: "Guadagno ottenuto \nin euro:"
				font_name: "Radley-Sans"
				font_size: "20"
				halign: "center"

			Label:
				id: numero_guadagno
				text: "0"

			Label:
				text: ""

			Label:
				text: ""

			Button:
				id: azzera
				text: "AZZERA"
				on_press:
					root.color_azzera()
				on_release:
					root.color_azzera_release()
					root.azzera()
				font_name: "Radley-Sans"
				font_size: "20"
				background_color: "#333333"
